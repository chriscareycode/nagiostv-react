{
	"compilerOptions": {
	  "target": "ESNext",
	  "lib": ["dom", "dom.iterable", "esnext"],
	  "types": ["vitest/globals", "@testing-library/jest-dom", "vite/client", "vite-plugin-svgr/client"],
	  "allowJs": true,
	  "skipLibCheck": false,
	  "esModuleInterop": false,
	  "allowSyntheticDefaultImports": true,
	  "strict": true,
	  "forceConsistentCasingInFileNames": true,
	  "noFallthroughCasesInSwitch": true,
	  "module": "ESNext",
	  "moduleResolution": "node",
	  "resolveJsonModule": true,
	  "isolatedModules": true,
	  "noEmit": true,
	  "jsx": "react-jsx",
	  "baseUrl": ".",
	  "paths": {
			"atoms/*": ["src/atoms/*"],
			"components/*": ["src/components/*"],
			"helpers/*": ["src/helpers/*"],
			"types/*": ["src/types/*"],
			"widgets/*": ["src/widgets/*"],
			"utils/*": ["src/utils/*"]
	  }
	},
	"include": ["src"]
  }